User Function ContaE2A2()

Local aArea	:= GetArea()
Local cRet	:= SE2->E2_CCONTCR

If Empty(cRet)
	dbSelectArea("SA2")
	aAreaSA2 := GetArea()
	dbSetOrder(1) // A2_FILIAL+A2_COD+A2_LOJA
	If DbSeek(xFilial("SA2")+SE2->E2_FORNECE+SE2->E2_LOJA)
		cRet := SA2->A2_CONTA
	EndIf
	RestArea(aAreaSA2)
	
EndIf

RestArea(aArea)

Return(cRet)

